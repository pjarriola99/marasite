<table>
  <tr>
    <th>Title</th>
    <th>Picture</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
    <td><%= image_tag picture.url, :size => "200x200" %></td>
    <td><%= link_to 'Show', picture %></td>
   
  </tr>
<% end %>
</table>

